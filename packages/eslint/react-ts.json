{
  "plugins": [
    "@typescript-eslint",
    "react"
  ],
  "extends": [
    "plugin:react/recommended",
    "./typescript.json"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "React": "writable"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "react/jsx-tag-spacing": [
      "error",
      {
        "closingSlash": "never",
        "beforeSelfClosing": "always",
        "afterOpening": "never",
        "beforeClosing": "never"
      }
    ],
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "react/jsx-sort-props": ["error", {
      "shorthandFirst": true,
      "multiline": "last",
      "callbacksLast": true
    }],
    "react/jsx-wrap-multilines": ["error", {
      "return": "parens-new-line",
      "arrow": "parens-new-line",
      "prop": "parens-new-line"
    }]
  }
}
